library(plotly)
library(dplyr)
plot_map <- function(path_to_csv) {
df <- read.csv(path_to_csv)
g <- list(
scope = 'spain',
projection = list(type = 'mercator'),
showland = TRUE,
landcolor = toRGB("gray95"),
subunitcolor = toRGB("gray85"),
countrycolor = toRGB("gray85"),
countrywidth = 0.5,
subunitwidth = 0.5
)
fig <- plot_geo(df, lat = Latitud, lon = Longitud)
fig <- fig %>% add_markers(
text = ~paste(paste("Magnitud", Magnitud), paste("Profundidad", Profundidad), sep = "<br />"),
color = ~Magnitud, symbol = I("square"), size = ~Profundidad, hoverinfo = "text"
)
fig <- fig %>% colorbar(title = "Magnitud de terremotos<br />")
fig <- fig %>% layout(
title = 'Mapa de terremotos', geo = g
)
fig
}
